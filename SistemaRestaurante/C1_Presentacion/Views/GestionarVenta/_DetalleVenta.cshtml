@using C3_Dominio.Entidades
@model Venta
@{

}

<div class="modal-dialog" style="width:55%;">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title" id="custom-width-modalLabel">@Model.SerieNumero</h4>
        </div>
        <div class="modal-body">
            <table id="detalleVenta_datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>N° Mesa</th>
                        <th>Mozo</th>                        
                        <th>Descripcion</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Sub Total</th>
                        <th>Sub Total + IGV</th>
                    </tr>
                </thead>
                <tbody>
                    @{ 
                        foreach (DetallePedido detalle in Model.pedido.detallesPedido)
                        {
                            <tr>
                                <td>@Model.pedido.mesa.numero</td>
                                <td>@Model.pedido.trabajador.generarNombreCompleto()</td>
                                <td>@detalle.producto.descripcion</td>
                                <td>@detalle.cantidad</td>
                                <td>@detalle.producto.precio</td>
                                <td>@detalle.calcularSubTotal().ToString()</td>
                                <td>@detalle.calcularSubTotalConIgv().ToString()</td>
  
                              </tr>
                        }
                        }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            @*<button type="button" class="btn btn-primary">Save changes</button>*@
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->