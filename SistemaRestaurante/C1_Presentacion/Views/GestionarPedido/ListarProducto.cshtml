@model List<C3_Dominio.Entidades.Mesa>
@{
    ViewBag.Title = "ListarProducto";
    Layout = "~/Views/MasterPage/Master.cshtml";
}

<div class="page-title">
    <h3 class="title">Principal</h3>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"> Principal </h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <table style="width:100%">
                @{
                    int numceldas = 0;
                    foreach (var m in Model)
                    {
                        if (numceldas == 0)
                        {
                            <tr></tr>
                        }
                        numceldas++;
                        <td align="center" width="25%">
                            <a href="@Url.Action("ValidarMesa", "Intranet", new { id = @m.id })"><img src="~/Recursos/img/mesa.jpg" style="width:100px; height:100px" /> </a>

                            <h3 style="color:gray; font-family:Arial; font-size: 12px">
                                Numero mesa:@m.numero
                            </h3>

                        </td>
                        if (numceldas == 4)
                        {
                            <tr></tr>
                            numceldas = 0;
                        }
                    }
                }
            </table>
        </div>
    </div>
</div>
