<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="shortcut icon" href="~/Recursos/img/favicon_1.ico">

    <title>Sistema Restaurante - Grupo 3</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Recursos/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Recursos/css/bootstrap-reset.css" rel="stylesheet" />

    <!--Animation css-->
    <link href="~/Recursos/css/animate.css" rel="stylesheet" />

    <!--Icon-fonts css-->
    <link href="~/Recursos/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Recursos/assets/ionicon/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Recursos/assets/material-design-iconic-font/css/material-design-iconic-font.min.css" rel="stylesheet" />

